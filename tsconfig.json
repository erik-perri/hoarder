{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "files": [
        "resources/js/app.ts"
    ],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.vue"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        // https://v3.vuejs.org/guide/typescript-support.html#recommended-configuration
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}
