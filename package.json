{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "prepare": "husky install",
        "test": "npx jest"
    },
    "dependencies": {
        "uuid": "8.3.2",
        "vue": "3.0.11"
    },
    "devDependencies": {
        "@testing-library/vue": "6.4.2",
        "@tsconfig/recommended": "1.0.1",
        "@types/jest": "26.0.23",
        "@types/uuid": "8.3.0",
        "@vue/compiler-sfc": "3.0.11",
        "axios": "0.21.1",
        "husky": "6.0.0",
        "jest": "26.6.3",
        "laravel-mix": "6.0.19",
        "lint-staged": "11.0.0",
        "prettier": "2.3.0",
        "resolve-url-loader": "4.0.0",
        "sass": "1.34.0",
        "sass-loader": "11.1.1",
        "ts-jest": "26.5.6",
        "ts-loader": "9.2.2",
        "typescript": "4.3.2",
        "vue-jest": "5.0.0-alpha.9",
        "vue-loader": "16.2.0",
        "webpack": "5.38.1"
    },
    "lint-staged": {
        "*.{js,css,scss,md}": "prettier --write",
        "*.php": "vendor/bin/php-cs-fixer fix --config=.php_cs"
    },
    "jest": {
        "rootDir": "resources/js",
        "moduleFileExtensions": [
            "ts",
            "js",
            "vue"
        ],
        "transform": {
            ".*\\.ts$": "ts-jest",
            ".*\\.vue$": "vue-jest"
        }
    }
}
