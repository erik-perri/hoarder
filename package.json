{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "prepare": "husky install"
    },
    "devDependencies": {
        "axios": "0.21.1",
        "husky": "6.0.0",
        "laravel-mix": "6.0.19",
        "lint-staged": "11.0.0",
        "lodash": "4.17.21",
        "prettier": "2.3.0",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.32.13",
        "sass-loader": "^11.0.1",
        "ts-loader": "^9.2.1",
        "typescript": "^4.2.4"
    },
    "lint-staged": {
        "*.{js,css,scss,md}": "prettier --write",
        "*.php": "vendor/bin/php-cs-fixer fix --config=.php_cs"
    }
}
